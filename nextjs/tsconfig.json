{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/authentication/*": ["authentication/*"],
      "@/styles/*": ["styles/*"],
      "@/forms/*": ["forms/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/helpers/*": ["helpers/*"],
      "@/contexts/*": ["contexts/*"],
      "@/scripts/*": ["scripts/*"],
      "@/services/*": ["services/*"],
      "@/schemas/*": ["schemas/*"],
      "@/translations/*": ["translations/*"]
    },
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/build/",
    "**/.next/"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
