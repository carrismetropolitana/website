{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/utils/*": [
        "utils/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/contexts/*": [
        "contexts/*"
      ],
      "@/opengraph/*": [
        "opengraph/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/translations/*": [
        "translations/*"
      ]
    },
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/build/",
    "**/.next/"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "typingOptions": {
    "enableAutoDiscovery": true
  }
}
